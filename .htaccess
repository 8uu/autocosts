suPHP_ConfigPath /home4/jfolpf

<IfModule mod_expires.c>
ExpiresActive On 
ExpiresDefault "access plus 1 month"
</IfModule>

AddDefaultCharset utf-8
ErrorDocument 400 /i.php
ErrorDocument 401 /i.php
ErrorDocument 403 /i.php
ErrorDocument 404 /i.php
ErrorDocument 500 /i.php
DirectoryIndex i.php index.php index.html index.htm

# Disable server signature
ServerSignature Off

RewriteEngine On

RewriteRule sitemap\.xml sitemap.php [L]

RewriteBase /
RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^(.*)$ http://%1/$1 [R=301,L]

RewriteCond %{QUERY_STRING} ^c=([a-zA-Z][a-zA-Z])$
RewriteRule ^index.php$ /%1%2? [R=301,L]

RewriteRule ^([a-zA-Z][a-zA-Z])$ /i.php?c=$1$2 [L]

#Domain Name Policy (DNP) in: http://github.com/jfoclpf/autocosts/wiki/Domain-name-policy

#Forward rules of Domains that fulfill Rule 1 of the Domain Name Policy

RewriteCond %{HTTP_HOST} ^autocustos\.pt$ [OR]
RewriteCond %{HTTP_HOST} ^www\.autocustos\.pt$
RewriteRule ^/?$ "http\:\/\/autocustos\.info\/PT" [R=301,L]

RewriteCond %{HTTP_HOST} ^autocostes\.es$ [OR]
RewriteCond %{HTTP_HOST} ^www\.autocostes\.es$
RewriteRule ^/?$ "http\:\/\/autocostos\.info\/ES" [R=301,L]

RewriteCond %{HTTP_HOST} ^autocouts\.fr$ [OR]
RewriteCond %{HTTP_HOST} ^www\.autocouts\.fr$
RewriteRule ^/?$ "http\:\/\/autocouts\.info\/FR" [R=301,L]

RewriteCond %{HTTP_HOST} ^autocosti\.it$ [OR]
RewriteCond %{HTTP_HOST} ^www\.autocosti\.it$
RewriteRule ^/?$ "http\:\/\/autocosti\.info\/IT" [R=301,L]

RewriteCond %{HTTP_HOST} ^autocosturi\.ro$ [OR]
RewriteCond %{HTTP_HOST} ^www\.autocosturi\.ro$
RewriteRule ^/?$ "http\:\/\/autocosts\.info\/RO" [R=301,L]

RewriteCond %{HTTP_HOST} ^exodaautokinitou\.gr$ [OR]
RewriteCond %{HTTP_HOST} ^www\.exodaautokinitou\.gr$
RewriteRule ^/?$ "http\:\/\/autocosts\.info\/GR" [R=301,L]

RewriteCond %{HTTP_HOST} ^autokoszty\.info$ [OR]
RewriteCond %{HTTP_HOST} ^www\.autokoszty\.info$
RewriteRule ^/?$ "http\:\/\/autokoszty\.info\/PL" [R=301,L]

#General broad rules
RewriteCond %{HTTP_HOST} ^autocosts\.org$ [OR]
RewriteCond %{HTTP_HOST} ^www\.autocosts\.org$
RewriteRule ^/?$ "http\:\/\/autocosts\.info" [R=301,L]

RewriteCond %{HTTP_HOST} ^autocost\.org$ [OR]
RewriteCond %{HTTP_HOST} ^www\.autocost\.org$
RewriteRule ^/?$ "http\:\/\/autocosts\.info" [R=301,L]



