<!DOCTYPE html>
<html lang="{{{get2letterLangCode}}}">

<head>
    <meta charset="UTF-8">
    <meta name='viewport' content='width=device-width, initial-scale=1.0, user-scalable=0' >
    
    <meta property="og:type" content="website" />
    <meta property="og:title" content="{{{ getAdaptedTitle }}}" />
    <meta property="og:description" content="{{{ getMetaDescription }}}" />
    <meta property="og:url" content="{{{clientData.fullURL}}}" />
    <meta property="og:site_name" content="{{{ getAdaptedTitle }}}" />
    <meta property="og:image" content="{{{clientData.basicURL}}}/img/logo/logo.svg" />    
    <meta property="og:locale" content="{{{ getLocale }}}" />
    
    <title>{{{ getAdaptedTitle }}}</title>

    <meta name="description" content="{{{ getMetaDescription }}}" />
    <meta name="keywords" content="{{{ getKeywords }}}" />
    <meta name="viewport" content="width=device-width" />
    <meta name="author" content="Autocosts Org" />
    <meta name="robots" content="{{#if clientData.isThisATest}}noindex, nofollow{{else}}index, follow{{/if}}" />
    
    <meta name="google-play-app" content="app-id=info.autocosts">
    
    <!--<link href="css/merged_init.css" rel="stylesheet" media="screen" />-->
    <!--temporary-->
    <link href="css/style.css" rel="stylesheet" media="screen" />
    <link href="css/responsive.css" rel="stylesheet" media="screen" />
    <link href="css/fonts.css" rel="stylesheet" media="screen" />
    <link href="css/colors.css" rel="stylesheet" media="screen" />
    <link href="css/smart-app-banner.css" rel="stylesheet" media="screen" />
    <!--end of temporary-->
    
    <link href="favicon.png" rel="shortcut icon" type="image/png" />
</head>

<body>
    
    <main>
        <div class="sidebars">
            {{> sidebars }}
        </div>

        <header>
            <a class="btn btn-left-sidebar cursor_pointer" data-action="open" data-side="left"></a>
            {{#if serverData.settings.switches.dataBase}}
                <a class="btn btn-right-sidebar cursor_pointer" data-action="open" data-side="right"></a>
            {{/if}}
            <div class="logo"><a href="/" title="Home"><img src="img/logo/logo.svg" alt="Auto Costs"/></a></div>
        </header>

        <section id="hero">
            <div class="container">
                <h1>{{{words.web_page_title}}}</h1>

                <h2>
                    {{{getSubTitleArr 1}}}
                    <select name="country_select" id="country_select">
                        {{~#each serverData.availableCountries~}}
                        <option value="{{@key}}"{{{isSelected ../CC @key}}}>
                            {{~this~}}
                        </option>
                        {{/each}}
                    </select>
                    {{{getSubTitleArr 2}}}
                </h2>

                <input type="button" id="calculateButton" class="button big btn-blue cursor_pointer" value="{{{words.calculate_car_costs}}}" />
            </div>    
        </section>

        {{#with words}}
        <section id="form">
            <form name="costs_form" action="javascript:void(0);">
            {{> form }}
            </form>
        </section>
        
        <div id="results">
            <div>
                {{> results }}
            </div>
            <div class="bottom-actions-bar">
                {{> bottomActionsBar }}
            </div>
        </div>
        {{/with}}

        <footer>
            <div class="animation"></div>
        </footer>
    </main>
        
    <!-- Data sent to JS code on browser -->
    {{> globalData }}
    
    <script src="client/jquery/jquery.min.js"></script>
    <script src="client/main.js"></script>
    
</body>
</html>

