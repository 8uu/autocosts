<!DOCTYPE html>
<html lang="{{{get2letterLangCode}}}">

<head>
    <meta charset="UTF-8">
    <meta name='viewport' content='width=device-width, initial-scale=1.0, user-scalable=0' >
    
    <meta property="og:type" content="website" />
    <meta property="og:title" content="{{{ getAdaptedTitle }}}" />
    <meta property="og:description" content="{{{ getMetaDescription }}}" />
    <meta property="og:url" content="https://autocosts.info" />
    <meta property="og:site_name" content="{{{ getAdaptedTitle }}}" />
    <meta property="og:image" content="" />
    <meta property="og:image:secure_url" content="" />
    <meta property="og:locale" content="en_US" />
    
    <title>{{{ getAdaptedTitle }}}</title>

    <meta name="description" content="{{{ getMetaDescription }}}" />
    <meta name="keywords" content="{{{ getKeywords }}}" />
    <meta name="viewport" content="width=device-width" />
    <meta name="author" content="Autocosts Org" />
    <meta name="robots" content="{{#if clientData.isThisATest}}noindex, nofollow{{else}}index, follow{{/if}}" />
    
    <!--<link href="css/merged_init.css" rel="stylesheet" media="screen" />-->
    <!--temporary-->
    <link href="css/style.css" rel="stylesheet" media="screen" />
    <link href="css/responsive.css" rel="stylesheet" media="screen" />
    <link href="css/fonts.css" rel="stylesheet" media="screen" />
    <!--end of temporary-->
    
    <link href="favicon.png" rel="shortcut icon" type="image/png" />
</head>

<body>
    
    <main>
        <div class="sidebars">
            {{> sidebars }}
        </div>

        <header>
            <a href="#" class="btn btn-left-sidebar" data-action="open" data-side="left"></a>
            {{#if serverData.settings.switches.dataBase}}
                <a href="#" class="btn btn-right-sidebar" data-action="open" data-side="right"></a>
            {{/if}}
            <h1 class="logo"><a href="/" title="Home"><img src="img/logo/logo.svg" alt="Auto Costs"/></a></h1>
        </header>

        <section id="hero">
            <div class="container">
                <h1>{{{words.web_page_title}}}</h1>

                <h2>
                    {{#if serverData.settings.switches.dataBase}}
                        The average total costs in
                    {{/if}} 
                    <select name="country_select" id="country_select">
                        {{~#each serverData.availableCountries~}}
                        <option value="{{@key}}"{{{isSelected ../CC @key}}}>
                            {{~this~}}
                        </option>
                        {{/each}}
                    </select>
                    {{#if serverData.settings.switches.dataBase}}
                        is <b>{{{words.curr_symbol}}}{{{ getStatsData "total_costs_year"}}}</b> 
                        per year, representing <b>{{{getStatsData "month_per_year_to_afford_car" 1}}} months</b> 
                        of average salary.<br />
                        Find the true cost of owning a car in your country.
                    {{/if}}
                </h2>

                <input type="button" id="calculateButton" style="cursor: pointer;" 
                       class="button big btn-blue" value="Calculate car cost" />
            </div>    
        </section>

        {{#with words}}
        <section id="form">
            <form name="costs_form" action="javascript:void(0);">
            {{> form }}
            </form>
        </section>
        
        <section id="results">
            <div>
                {{> results }}
            </div>
            <div class="bottom-actions-bar">
                {{> bottom_actions_bar }}
            </div>
        </section>
        {{/with}}

        <footer>
            <div class="animation"></div>
        </footer>
    </main>
        
    <!-- Data sent to JS code on browser -->
    {{> globalData }}
    
    <script src="client/Globals.js"></script>    
    
</body>
</html>

