<section id="info-boxes">
    <div class="container">
        <!--  BOX 1 -->
        <div class="info-box box-1">
            <h3>{{{your_car_costs_you}}}</h3>
            <h2>
                <sup>{{{curr_symbol}}}</sup><span class="total_costs_year toFixed0"></span>
            </h2>

            <span class="per">{{{word_per}}}</span> 
            <select name="" id="">
                <option value="month">{{{month}}}</option>  
            </select>
        </div>

        <!--  BOX 2 -->
        <div class="info-box box-2">
            <h2>
                <sup>{{{curr_symbol}}}</sup><span class="total_costs_ever toFixed0"></span>
            </h2>
            <span class="">in <b><span class="age_months toFixed0"></span></b> of possession</span> 
        </div>

        <!--  BOX 3 -->
        <div class="info-box box-3">
            <div class="cake-income">
                <canvas id="doughnutChart"></canvas>
            </div>
            <div class="text">
                <h2><span class="fin_effort_percentage_of_income percentage toFixed0"></span></h2>                    
                <span class="">of your income</span>
            </div>
        </div>
    </div>    
</section>

<!-- ************************** AVERAGE MONTHLY COST ************************** -->
<section id="avg-monthly-cost">
    <h2>{{{average_costs_per_type}}}</h2>
    <div class="stats">
        <canvas id="monthlyCostsChart"></canvas>
    </div>
    <div class="stats-references">
        <div class="standing-costs">
            <h5>{{{fixed_costs}}}</h5>
            <ul>
                <li class="depreciation_color">{{{depreciation}}}</li>
                <li class="vehicle-insurance_color">{{{insurance}}}</li>
                <li class="car-finance_color">{{{credit}}}</li>
                <li class="vehicle-inspection_color">{{{inspection}}}</li>
                <li class="vehicle-excise_color">{{{road_taxes}}}</li>
            </ul>
        </div>
        <div class="running-costs">
            <h5>{{{running_costs}}}</h5>
            <ul>
                <li class="fuel_color">{{{fuel}}}</li>
                <li class="maintenance_color">{{{maintenance}}}</li>
                <li class="repair_color">{{{rep_improv}}}</li>
                <li class="parking_color">{{{parking}}}</li>
                <li class="tolls_color">{{{tolls}}}</li>
                <li class="traffic_color">{{{fines}}}</li>
                <li class="washing_color">{{{washing}}}</li>
            </ul>
        </div>

    </div>

    <div class="three-boxes">
        <div class="standing-costs box">
            <div class="title">
                <h3>{{{fixed_costs}}}</h3>
                <span>{{{average_costs_per_type}}}</span>
            </div>

            <button class="accordion">
                <h5 class="depreciation_color">{{{depreciation}}}</h5>
                <span class="monthly_costs_depreciation currency toFixed2"></span>
            </button>
            <div class="panel depreciation_details">
            </div>

            <button class="accordion">
                <h5 class="vehicle-insurance_color">{{{insurance_short}}}</h5>
                <span class="monthly_costs_insurance currency toFixed2"></span>
            </button>
            <div class="panel insurance_details">
            </div>

            <button class="accordion">
                <h5 class="car-finance_color">{{{credit}}}</h5>
                <span class="monthly_costs_credit currency toFixed2"></span>
            </button>
            <div class="panel credit_details">
            </div>

            <button class="accordion">
                <h5 class="vehicle-inspection_color">{{{inspection}}}</h5>
                <span class="monthly_costs_inspection currency toFixed2"></span>
            </button>
            <div class="panel inspection_details">
            </div>

            <button class="accordion">
                <h5 class="vehicle-excise_color">{{{road_taxes_short}}}</h5>
                <span class="monthly_costs_car_tax currency toFixed2"></span>
            </button>
            <div class="panel car_tax_details">
            </div>

            <button class="accordion">
                <h5 class="maintenance_color">50% {{{maintenance}}}</h5>
                <span class="monthly_costs_halfOfMaintenance currency toFixed2"></span>
            </button>
            <div class="panel maintenance_details">
            </div>

            <div class="total-ammount">
                <h4>{{{total_fixed}}}</h4>
                <span class="total_standing_costs_month currency toFixed2"></span>
            </div>
        </div>


        <div class="running-costs box">
            <div class="title">
                <h3>{{{running_costs}}}</h3>
                <span>{{{average_costs_per_type}}}</span>
            </div>

            <button class="accordion">
                <h5 class="fuel_color">{{{fuel}}}</h5>
                <span class="monthly_costs_fuel currency toFixed2"></span>
            </button>
            <div class="panel fuel_details">
            </div>

            <button class="accordion">
                <h5 class="maintenance_color">50% {{{maintenance}}}</h5>
                <span class="monthly_costs_halfOfMaintenance currency toFixed2"></span>
            </button>
            <div class="panel maintenance_details">
            </div>

            <button class="accordion">
                <h5 class="repair_color">{{{rep_improv}}}</h5>
                <span class="monthly_costs_repairs_improv currency toFixed2"></span>
            </button>
            <div class="panel repairs_improv_details">
            </div>

            <button class="accordion">
                <h5 class="parking_color">{{{parking}}}</h5>
                <span class="monthly_costs_parking currency toFixed2"></span>
            </button>
            <div class="panel parking_details">
            </div>

            <button class="accordion">
                <h5 class="tolls_color">{{{tolls}}}</h5>
                <span class="monthly_costs_tolls currency toFixed2"></span>
            </button>
            <div class="panel tolls_details">
            </div>

            <button class="accordion">
                <h5 class="traffic_color">{{{fines}}}</h5>
                <span class="monthly_costs_fines currency toFixed2"></span>
            </button>
            <div class="panel fines_details">
            </div>

            <button class="accordion">
                <h5 class="washing_color">{{{washing}}}</h5>
                <span class="monthly_costs_repairs_washing currency toFixed2"></span>
            </button>
            <div class="panel washing_details">
            </div>

            <div class="total-ammount">
                <h4>{{{total_variable}}}</h4>
                <span class="total_running_costs_month currency toFixed2"></span>
            </div>

        </div>

        <div class="total box">
            <div class="title">
                <h3>{{{word_total_cap}}}</h3>
                <span>{{{costs}}}</span>
            </div>
            <div class="total-item">
                <h5>{{{run_cp_dist}}}</h5>
                <span class="running_costs_p_unit_distance currency toFixed2"></span>
            </div>

            <div class="total-item">
                <h5>{{{total_cp_dist}}}</h5>
                <span class="total_costs_p_unit_distance currency toFixed2"></span>
            </div>

            <div class="total-item">
                <h5>{{{fixed_costs}}}</h5>
                <span class="total_standing_costs_month currency toFixed2"></span>
            </div>

            <div class="total-item">
                <h5>{{{running_costs}}}</h5>
                <span class="total_running_costs_month currency toFixed2"></span>
            </div>

            <div class="total-ammount">
                <h4>{{{word_total_cap}}}</h4>
                <span class="total_costs_month currency toFixed2"></span>
            </div>

        </div>

    </div> <!--Three boxes finish here-->

</section><!--HERE FINISHES AVERAGE MONTHLY COST-->


<!-- ************************** FINANCIAL EFFORT ************************** -->
