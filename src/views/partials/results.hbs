</section>



<!-- ************************** EQUIVALENT TRANSPORT COSTS ************************** -->
<section id="equivalent-transport-costs" class="results-section">
    <h2>{{{publ_tra_equiv}}}</h2>
    <div class="graph">
        <h5>{{{your_car_costs_you}}} vs {{{pub_trans_text}}} vs Uber</h5>
        <div class="stats">
            <canvas id="equivalentTransportChart"></canvas>               
        </div>
        <div class="stats-references">
            <ul>
                <li class="car-cost_color">{{{your_car_costs_you}}}</li>
                <li class="public-trans_color">{{{pub_trans_text}}}</li>
                <li class="taxi-trans_color">{{{taxi_desl}}}</li>
                <li class="other-trans_color">{{{other_pub_trans}}}</li>
                <li class="uber_color">Uber</li>
                <li class="other-trans-2_color">{{{other_pub_trans}}}</li>
            </ul>
        </div>
    </div>

    <!-- Public Transports -->
    <div class="values box">
        <div class="title">
            <span>{{{monthly_amount}}}</span>
        </div>

        <button class="accordion">
            <h5 class="public-trans_color">{{{pub_trans_text}}}</h5>
            <span class="public_transports_total_price_pt currency toFixed1"></span>
        </button>
        <div class="panel public_transports_details">
        </div>

        <button class="accordion">
            <h5 class="taxi-trans_color">{{{taxi_desl}}}</h5>
            <span class="public_transports_taxi_cost currency toFixed1"></span>
        </button>
        <div class="panel taxi_details">
        </div>

        <button class="accordion">
            <h5 class="other-trans_color">{{{other_pub_trans}}}</h5>
            <span class="public_transports_other_pt currency toFixed1"></span>             
        </button>
        <div class="panel other_pub_trans_details">
        </div>

        <div class="total-ammount">
            <h4>{{{word_total_cap}}}</h4>
            <span class="public_transports_total_altern currency toFixed0"></span>
        </div>
    </div>

    <!-- Uber -->
    <div class="values box">
        <div class="title">
            <span>{{{monthly_amount}}}</span>
        </div>

        <button class="accordion">
            <h5 class="uber_color">Uber</h5>
            <span class="uber_amount"></span>
        </button>
        <div class="panel uber_details">
        </div>

        <button class="accordion">
            <h5 class="other-trans-2_color">{{{other_pub_trans}}}</h5>
            <span class="other_pub_trans_for_uber_amount"></span>
        </button>
        <div class="panel other_pub_trans_for_uber_details">
        </div>

        <div class="total-ammount">
            <h4>{{{word_total_cap}}}</h4>
            <span class="public_transports_total_altern currency toFixed0"></span>
        </div>
    </div>

</section>
  
